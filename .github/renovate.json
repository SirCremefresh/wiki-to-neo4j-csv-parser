{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "main"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/|\\.)README\\.md$",
        "(^|/|\\.)integration\\.yml$"
      ],
      "matchStrings": [
        "neo4j:(?<currentValue>[\\d\\.]*)"
      ],
      "depNameTemplate": "neo4j",
      "datasourceTemplate": "docker"
    }
  ]
}
